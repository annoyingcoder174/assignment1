<%- include("templates/header") %>

    <h2>Admin Panel</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=> { %>
                <tr>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.user_type %>
                    </td>
                    <td>
                        <% if (user.user_type==='user' ) { %>
                            <form action="/promote" method="POST" style="display:inline;">
                                <input type="hidden" name="email" value="<%= user.email %>">
                                <button class="btn btn-warning btn-sm">Promote to Admin</button>
                            </form>
                            <% } else { %>
                                <form action="/demote" method="POST" style="display:inline;">
                                    <input type="hidden" name="email" value="<%= user.email %>">
                                    <button class="btn btn-danger btn-sm">Demote to User</button>
                                </form>
                                <% } %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include("templates/footer") %>